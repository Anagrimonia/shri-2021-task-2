{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "downlevelIteration": true, 
    "resolveJsonModule": true
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./build/"
  ],
}