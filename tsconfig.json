{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true 
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./build/"
  ],
}